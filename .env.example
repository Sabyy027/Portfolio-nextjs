# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Authentication
# IMPORTANT: Change this to a strong, unique password
ADMIN_PASSWORD=your_secure_password_here

# JWT Secret (generate a random 32+ character string)
JWT_SECRET=your_jwt_secret_minimum_32_characters_random_string

# Optional: Email service for contact form
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Web3Forms API Key (for contact form)
NEXT_PUBLIC_WEB3FORMS_KEY=your_web3forms_access_key_here

